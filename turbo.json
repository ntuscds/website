{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "env": ["PAYLOAD_SECRET", "MONGODB_URI", "WORDPRESS_API_URL"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["PAYLOAD_SECRET", "MONGODB_URI", "WORDPRESS_API_URL"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "cypress": {
      "outputs": []
    },
    "cypress:headless": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "cypress:start-headless": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
