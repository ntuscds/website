{
  "name": "admin-be",
  "version": "1.0.0",
  "description": "backend for admin panel",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/index.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/index.js",
    "build": "yarn run lint",
    "start": "yarn run serve",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "eslint": "^7.23.0",
    "eslint-config-custom": "*",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "types": "*",
    "typescript": "4.8.4"
  }
}
